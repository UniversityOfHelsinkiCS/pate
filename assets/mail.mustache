<html>
  <head>
    <style>
      .header { 
        display: flex;
        background-color: {{color}}; 
        max-height: 5em;
      }
      body {
        font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji;
      }
      .svg-container {
        display: grid;
        background-color: rgba(245,245,245,0.6);
        margin-left: auto;
        padding: 0.5em;
        height: 4em;
        max-height: 4em;
      }
      .email-header {
        align-self: center;
        margin: auto 0;
        padding-left: 1em;
        font-size: 1.75em;
        color: {{headerFontColor}};
      }
      .content {
        padding: 1em;
      }
      .toskalogo {
        grid-column: 1;
        grid-row: 1;
        height: 100%;
      }
      svg {
        grid-column: 1;
        grid-row: 1;
        height: inherit;
        max-height: inherit;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <div class="email-header">
        {{header}}
      </div>
      <div class="svg-container">
        <img class="toskalogo" onerror="this.style.display='none'" src='https://pate.toska.cs.helsinki.fi/toskalogo.png'>
      </div>
    </div>
    <div class="content">
      {{{content}}}
    </div>
  </body>
</html>
